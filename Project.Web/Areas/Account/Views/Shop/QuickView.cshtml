                    @if (Model != null)
                    {
                        <div class="product-preview">
                            <img src="~/ProductPicture/@Model.ProductPicture" alt="">
                        </div>
                    }
                    else
                    {
                        <p>Ürün resmi bulunamadı.</p>
                    }
                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    @if (Model != null)
                    {
                        <h2 class="product-name">@Model.ProductName</h2>
                        <div>
                            <div class="product-rating">
                                @for (int i = 0; i < (int)Model.PrdouctRating; i++)
                                {
                                    <i class="fa fa-star"></i>
                                }
                                @for (int i = 0; i < 5 - (int)Model.PrdouctRating; i++)
                                {
                                    <i class="fa fa-star-o"></i>
                                }

                            </div>
                            <a class="review-link" href="#">@Model.Comments.Count() Review(s) | Add your review</a>
                        </div>
                    }
                    else
                    {
                        <p>Product details are not available.</p>
                    }
                    <div>
                        @if (Model != null)
                        {
                            <h3 class="product-price">@Model.ProductPrice <del class="product-old-price">$990.00</del></h3>
                            <span class="product-available">In Stock</span>
                        }
                        else
                        {
                            <p>Product details are not available.</p>
                        }
                    </div>

                    @if (Model != null && Model.ProductDescription != null)
                    {
                        <p>@Model.ProductDescription</p>
                    }
                    else
                    {
                        <p>Product description is not available.</p>
                    }


                    <div class="add-to-cart">
                        <a asp-action="AddToCart" asp-controller="Shop" asp-route-id="@Model.Id" asp-area="Account"><button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Sepete Ekle</button></a>
                    </div>

                    <ul class="product-btns">
                        <li><a href="#"><i class="fa fa-heart-o"></i> add to wishlist</a></li>
                        <li><a href="#"><i class="fa fa-exchange"></i> add to compare</a></li>
                    </ul>

                    <ul class="product-links">
                        <li>Category:</li>
                        <li><a href="#">Elektronik</a></li>
                        <li><a href="#">Ev Elektroniği</a></li>
                    </ul>

