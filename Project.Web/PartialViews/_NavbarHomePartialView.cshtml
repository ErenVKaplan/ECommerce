@using Project.Data.Entities;
@using Project.Service.Services.Abstract;
@using Project.Web
@using System.Security.Claims;
@using Project.Web.Extensions;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IProductService productService;
@inject IHttpContextAccessor httpcontextaccessor;

@if (User.Identity!.IsAuthenticated)
{
	var cart = httpcontextaccessor.HttpContext.Session.GetObject<Dictionary<Guid, int>>("cart");
	List<BasketProduct> products = new List<BasketProduct>();
	if (cart != null)
	{
		products = productService.GetProductsFromIds(cart);
	}
	
	
	<header>
		<!-- TOP HEADER -->
		<div id="top-header">
			<div class="container">
				<ul class="header-links pull-left">
					<li><a href="#"><i class="fa fa-phone"></i> 0000000000</a></li>
					<li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
					<li><a href="#"><i class="fa fa-map-marker"></i> Trabzon KTU</a></li>
				</ul>
				<ul class="header-links pull-right">
					<li><a href="#"><i class="fa fa-User-o"></i> Hoşgeldiniz!</a></li>
					<li><a href="#"><i class="fa fa-user-o"></i> @User.Identity.Name</a></li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#"  aria-expanded="false">Hesabım</a>
						<ul class="dropdown-menu" style="background-color:black">
							<li><a class="dropdown-item" href="/Account/UserProfile/Profile">Profil</a></li>
							<li><a class="dropdown-item" href="/Account/UserProfile/ResetPassword">Şifremi Değiştir</a></li>
							@if (User.HasClaim(x => x.Type == ClaimTypes.Role && x.Value == "Admin"))
							{
								<li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
							}
							<li>
									<a class="dropdown-item" asp-route-returnurl="/Account/UserProfile/UserOrders" asp-action="UserOrders" asp-area="Account" asp-controller="UserProfile" asp-route-UserId="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Geçmiş Siparişlerim</a>
								
							</li>
							<li>
								<a class="dropdown-item" asp-route-returnurl="/Account/User/SignIn" asp-action="Logout" asp-area="Account" asp-controller="User">Çıkış Yap</a>
								
							</li>
							
						</ul>
					</li>
				</ul>
			</div>
		</div>
		<!-- /TOP HEADER -->
		<!-- MAIN HEADER -->
		<div id="header">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- LOGO -->
					<div class="col-md-3">
						<div class="header-logo">
							<a href="/Home/Index" class="logo">
								<img src="~/images/logom.png" style="max-width: 150px; max-height: 100px;" />
							</a>
						</div>
					</div>

					<!-- /LOGO -->
					<!-- SEARCH BAR -->
					<div class="col-md-6">
						<div class="header-search">
							<form>
								<select class="input-select">
									<option value="0">All Categories</option>
									<option value="1">Category 01</option>
									<option value="1">Category 02</option>
								</select>
								<input class="input" placeholder="Search here">
								<button class="search-btn">Search</button>
							</form>
						</div>
					</div>
					<!-- /SEARCH BAR -->
					<!-- ACCOUNT -->
					<div class="col-md-3 clearfix">
						<div class="header-ctn">
							<!-- Wishlist -->
							<div>
								<a href="#">
									<i class="fa fa-heart-o"></i>
									<span>Your Wishlist</span>
									<div class="qty">2</div>
								</a>
							</div>
							@*<div>
								<a href="/Account/Shop/Cart">
									<i class="fa fa-shopping-cart"></i>
									<span>Sepete Git</span>
									<div class="qty"></div>
								</a>
							</div>*@
							<!-- /Wishlist -->
							<!-- Cart -->
							<div class="dropdown">
								<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
									<i class="fa fa-shopping-cart"></i>
									<span>Sepetiniz</span>
									<div class="qty">@(cart?.Count ?? 0)</div>
								</a>
								<div class="cart-dropdown">
									<div class="cart-list">
										@foreach (var item in products)
										{
											<div class="product-widget">
												<div class="product-img">
													<img src="~/ProductPicture/@item.Product.ProductPicture" alt="">
													<h6>@item.Quantity</h6>
												</div>
												<div class="product-body">
													<h3 class="product-name"><a href="#">@item.Product.ProductName</a></h3>
													<h4 class="product-price"><span class="qty"></span>@((item.Product.ProductPrice) - (item.Product.ProductPrice * (item.Product.ProductDiscount / 100))).00</h4>
												</div>
												<form asp-action="RemoveFromCart" asp-controller="Shop" asp-area="Account" asp-route-productId="@item.Product.Id" method="post">

													<button class="delete"><i class="fa fa-close"></i></button>
												</form>
											</div>
										}
										

										@*<div class="product-widget">
											<div class="product-img">
												<img src="./img/product02.png" alt="">
											</div>
											<div class="product-body">
												<h3 class="product-name"><a href="#">product name goes here</a></h3>
												<h4 class="product-price"><span class="qty">3x</span>$980.00</h4>
											</div>
											<button class="delete"><i class="fa fa-close"></i></button>
										</div>*@
									</div>
									<div class="cart-summary">
										<small>@(cart?.Count ?? 0) Ürün Seçildi</small>
										<h5>Toplam Sepet: @products.Sum(x => x.Quantity * (x.Product.ProductPrice - (x.Product.ProductPrice * (x.Product.ProductDiscount / 100))))</h5>
									</div>

									<div class="cart-btns">
										<a href="/Account/Shop/ViewCart">Sepeti Önizle</a>
										<a href="/Account/Shop/Cart">Checkout <i class="fa fa-arrow-circle-right"></i></a>
									</div>
								</div>
							</div>
							<!-- /Cart -->
							<!-- Menu Toogle -->
							<div class="menu-toggle">
								<a href="#">
									<i class="fa fa-bars"></i>
									<span>Menu</span>
								</a>
							</div>
							<!-- /Menu Toogle -->
						</div>
					</div>
					<!-- /ACCOUNT -->
				</div>
				<!-- row -->
			</div>
			<!-- container -->
		</div>
		<!-- /MAIN HEADER -->
	</header>

}

else{
	<div id="header">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- LOGO -->
				<div class="col-md-3">
					<div class="header-logo">
						<a href="#" class="logo">
							<img src="./img/logo.png" alt="">
						</a>
					</div>
				</div>
				<!-- /LOGO -->
				<!-- SEARCH BAR -->
				<div class="col-md-6">
					<div class="header-search">
						<form>
							<select class="input-select">
								<option value="0">All Categories</option>
								<option value="1">Category 01</option>
								<option value="1">Category 02</option>
							</select>
							<input class="input" placeholder="Search here">
							<button class="search-btn">Search</button>
						</form>
					</div>
				</div>
				<!-- /SEARCH BAR -->
				<!-- ACCOUNT -->
				<div class="col-md-3 clearfix">
					<div class="header-ctn">
						<!-- Wishlist -->
						<div>
							
								<i class="fa fa-heart-o"></i>
								<a class="btn btn-outline-info mx-1" asp-controller="User" asp-area="Account" asp-action="SignIn">Giriş Yap</a>
							
						</div>
						<!-- /Wishlist -->
						<!-- Cart -->
						<a class="btn btn-outline-info" asp-controller="User" asp-area="Account" asp-action="SignUp">Kayıt Ol</a>
						<!-- /Cart -->
						<!-- Menu Toogle -->
						<div class="menu-toggle">
							<a href="#">
								<i class="fa fa-bars"></i>
								<span>Menu</span>
							</a>
						</div>
						<!-- /Menu Toogle -->
					</div>
				</div>
				<!-- /ACCOUNT -->
			</div>
			<!-- row -->
		</div>
		<!-- container -->
	</div>
}
